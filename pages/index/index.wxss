.header {
  display: flex;
  padding: 10rpx;
}

.header image {
  width: 60rpx;
  height: 60rpx;
}

 .header .search {
   border-radius: 50rpx;
  border: 1rpx solid rgb(221, 220, 220);
  /*flex-grow: 可拉伸 flex-shrink： 可压缩 flex-basis: 当前元素的宽度*/
  /*flex默认值: flex-grow: 0, flex-shrink: 1, flex-basis: auto*/
  /*flex:1  flex-grow: 1, flex-shrink: 1, flex-basis: 0%*/
  /*flex:auto  flex-grow: 1, flex-shrink: 1, flex-basis: auto*/
  /*flex: 1会导致父元素宽度自动为100%*/
  flex: 1;
  margin: 0 20rpx;
  font-size: 26rpx;
  text-align: center;
  line-height: 60rpx;
  color: #d43c33;
}





.banners {
  width: 100%;
  height: 300rpx;
}

.banners image {
  width: 100%;
  height: 100%;
}

/* 导航样式 */
.navContainer {
  width: 100%;
  display: flex;
  flex-direction: row;
}

.navItem {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 10rpx 0;
}

.navItem text {
  font-size: 26rpx;
}

.navItem .iconfont {
  width: 100rpx;
  height: 100rpx;
  font-size: 50rpx;
  border-radius: 50%;
  background-color: red;
  text-align: center;
  line-height: 100rpx;
  color: white;
}

/*推荐样式 */
.recommendedContainer {
  width: 100%;
  padding: 10rpx;
  height: 250rpx;
}

/*推荐内容滚动区域 */
.recommendedScroll {
  display: flex;
  height: 225rpx;
}

/* 歌单容器样式 */
.recommendedContent {
  flex-direction: column;
  width: 150rpx;
  border-radius: 10rpx;
  margin-right: 10rpx;
}

.recommendedContent image {
  width: 150rpx;
  height: 150rpx;
}

.recommendedContent text {
  font-size: 25rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

/*排行榜样式 */
.topContainer {
  width: 100%;
  height: 420rpx;
  margin-top:50rpx ;
}

/* 排行榜滚动容器 */
.topScroll {

  display: flex;
  height: 350rpx;
}

.topScroll .topList {

  margin-right: 10rpx;

}

.songContainer {
  width: 350rpx;
  display: flex;
  justify-content: space-between;
}

.songContainer image {
  width: 100rpx;
  height: 100rpx;
}

.songContainer text {
  line-height: 100rpx;
}
.songContainer .name {
  font-size: 25rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}